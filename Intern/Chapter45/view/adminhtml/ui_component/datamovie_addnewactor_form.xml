<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">datamovie_addnewactor_form.datamovie_addnewactor_form_data_source</item>
            <item name="deps" xsi:type="string">datamovie_addnewactor_form.datamovie_addnewactor_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Actor Form</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="datamovie/movie/actor"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="datamovie/movie/saveactor"/>
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>datamovie_addnewactor_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>datamovie_addnewactor_form.datamovie_addnewactor_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="datamovie_addnewactor_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Intern\Chapter45\Model\Config\ActorDataProvider</argument>
            <argument name="name" xsi:type="string">datamovie_addnewactor_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">actor_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                <item name="submit_url" path="datamovie/movie/saveactor" xsi:type="url" />
            </item>
        </argument>
    </dataSource>

    <fieldset name="datamovie_addnewactor">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">
                    Actor Form
                </item>
            </item>
        </argument>
        <!-- This field has data type 'text' and standard 'input' form element and looks like input -->
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Actor name</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">datamovie_addnewactor</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
